<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/reportba"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="@color/list_text_color"
            android:textSize="15sp"
             />

        <TextView
            android:id="@+id/reportl5"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportba"
            android:padding="0dp"
            android:textColor="@color/list_text_color"
            android:textSize="15sp" 
            android:gravity="center" />

        <TextView
            android:id="@+id/reportb5to30"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportl5"
            android:textColor="@color/list_text_color"
            android:textSize="15sp"
            android:gravity="center"  />

        <TextView
            android:id="@+id/reportb30to60"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportb5to30"
            android:textColor="@color/list_text_color"
            android:textSize="15sp" 
            android:gravity="center" />

        <TextView
            android:id="@+id/reportb60to90"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportb30to60"
            android:textColor="@color/list_text_color"
            android:textSize="15sp"
            android:gravity="center"  />

        <TextView
            android:id="@+id/reportg90"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportb60to90"
            android:textColor="@color/list_text_color"
            android:textSize="15sp" 
            android:gravity="center" />

        <TextView
            android:id="@+id/reportinf"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reportg90"
            android:textColor="@color/list_text_color"
            android:textSize="15sp"
            android:gravity="center"  />
    </RelativeLayout>

</RelativeLayout>